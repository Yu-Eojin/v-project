#: import Factory kivy.factory.Factory

<PageLayout>:
    BoxLayout: #첫번째 페이지
        orientation:'vertical'
    
        Upper_bar:
            size_hint: (1, 0.1)
            canvas.before:
                Color:
                    rgba: 98 / 255, 255 / 255, 114 / 255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size

#    Label:
#        canvas.before:
#            Color:
#                rgba: 0 / 255, 0 / 255, 0 / 255, 1
#            Rectangle:
#                pos: self.pos
#                size: self.size
#        text:'Picture'

        Image:
            source: 'V-PIC.jpg'
            size_hint: (1, 0.8)
            #size: self.texture_size
        
        BoxLayout:
            orientation:'horizontal'
            padding: [30, 20]
            size_hint: (1, 0.2)

            Button:
                text: 'Help'
                size_hint:(0.3, 1)
                on_press: Factory.HelpPop().open()
            Button:
                text: 'Made'
                size_hint:(0.3, 1)
                on_press: Factory.MadePop().open() 
        
    BoxLayout: #두번째 페이지
        orientation: 'vertical'

        canvas:
            Color: 
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Upper_bar:
            size_hint: (1, 0.1)
            canvas.before:
                Color:
                    rgba: 98 / 255, 255 / 255, 114 / 255, 1

                Rectangle:
                    pos: self.pos
                    size: self.size
        
        BoxLayout:
            size_hint: (1, 0.8)
            Label:
                text: 'Vegan'
                color : 1, 1, 0, 1
                
        BoxLayout:
            orientation: 'horizontal'
            padding: [50, 20]
            size_hint: (1, 0.2)
            
            Button:
                size_hint: (0.3, 1)
                text:'reset'


            Button:
                size_hint: (0.3, 1)
                text: 'search'
        
